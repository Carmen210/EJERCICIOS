--CONSULTA 1: OBTENER LISTA COMPLETA DE TODOS LOS ALUMOS -- LECTURA
SELECT *
FROM alumnos

-- CONSULTA 2: OBTENER LA LISTA COMPLETA DE LOS IDIOMAS -- LECTURA
SELECT * 
FROM idiomas

-- CONSULTA 3: OBTENER LISTA ALUMNOS DE UN IDIOMA DETERMINADO
  -- forma A 
      SELECT * 
      FROM alumnos
      WHERE id_idioma = 2
  -- forma B
      SELECT *
      FROM alumnos
      JOIN idiomas ON alumnos.id_idioma = idiomas.id_idioma
      WHERE idiomas.nombre_idioma = 'Frances';
  -- forma c -- JOIN IMPLICITO
      SELECT *
      FROM alumnos, idiomas
      WHERE alumnos.id_idioma = idiomas.id_idioma
      AND idiomas.nombre_idioma = 'Frances';
  
-- CONSULTA 4: OBTENER LA CANTIDAD DE ALUMNOS QUE ESTUDIAN 1 IDIOMA PARTICULAR
    SELECT COUNT(*) AS cant_alumnos_ingles
    FROM alumnos
    JOIN idiomas ON alumnos.id_idioma = idiomas.id_idioma
    WHERE idiomas.nombre_idioma = 'ingles';
